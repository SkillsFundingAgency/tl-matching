@model Sfa.Tl.Matching.Models.ViewModel.DataImportParametersViewModel
@{
    ViewData["Title"] = "T Levels Industry Placement Matching Service";
}
@* ReSharper disable UnknownCssClass *@
<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @if (Model.IsImportsuccessful)
            {
                <div class="das-notification das-notification--success">
                    <p class="das-notification__body">File uploaded successfully</p>
                </div>
            }
            <div asp-validation-summary="All"></div>
            <form asp-controller="DataImport" asp-action="Import" enctype="multipart/form-data">
                <h1 class="govuk-heading-xl">Data Upload</h1>
                <div class="govuk-form-group">
                    <label class="govuk-label govuk-!-font-weight-bold" for="file">
                        Select the file
                    </label>
                    <input class="govuk-file-upload" id="file" name="file" type="file">
                </div>

                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                            <h2 class="govuk-fieldset__heading">
                                Select the file type
                            </h2>
                        </legend>
                        <div class="govuk-radios">
                            <select class="govuk-radios__item" asp-for="SelectedImportTypeId" asp-items="Model.ImportType"></select>
                        </div>
                    </fieldset>
                </div>

                <div class="govuk-form-group">
                    <input class="govuk-button" type="submit" value="Upload" />
                </div>

            </form>
        </div>
    </div>
</main>
@* ReSharper restore UnknownCssClass *@