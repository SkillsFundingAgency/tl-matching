@model Sfa.Tl.Matching.Web.ViewModels.DataImportViewModel
@{
    ViewData["Title"] = "T Levels Industry Placement Matching Service";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">        
            @if (Model.Success)
            {
                <div class="das-notification das-notification--success">
                    <p class="das-notification__body">File uploaded successfully</p>
                </div> 
            }          
            <div asp-validation-summary="All"></div>

            <h1 class="govuk-heading-xl">Data Import</h1>

            <form asp-controller="DataImport" asp-action="Upload" enctype="multipart/form-data">

                <div class="govuk-form-group">
                    <label class="govuk-label govuk-!-font-weight-bold" for="file">
                       Select the file
                    </label>
                    <input class="govuk-file-upload" id="file" name="file" type="file">
                </div>

                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                            <h2 class="govuk-fieldset__heading">
                                Select the file type
                            </h2>
                        </legend>
                        <div class="govuk-radios">
                            @foreach (var dataImportType in Model.DataImportTypeViewModels)
                            {
                                <div class="govuk-radios__item">
                                    <input asp-for="SelectedDataImportType" class="govuk-radios__input" id="data-import-type@dataImportType.Id" type="radio" value="@dataImportType.Id"/>
                                    <label class="govuk-label govuk-radios__label" for="data-import-type@dataImportType.Id">
                                        @dataImportType.Name
                                    </label>
                                </div>
                            }
                        </div>
                    </fieldset>
                </div>

                <div class="govuk-form-group">
                    <input class="govuk-button" type="submit" value="Upload"/>
                </div>

            </form>
        </div>
    </div>
</main>