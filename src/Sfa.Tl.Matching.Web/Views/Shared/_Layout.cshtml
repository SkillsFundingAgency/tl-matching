@using Microsoft.ApplicationInsights.AspNetCore
@inject JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html lang="en" class="govuk-template">

<partial name="_govuk_Head" />

<body class="govuk-template__body">
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5NM6D9L" height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <script>
        document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');
    </script>

    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>

    <div id="global-cookie-message"> <p class="govuk-width-container">Match employers with providers for industry placements uses cookies to make the site simpler. <a href="/Home/Cookies">Find out more about cookies</a></p> </div>

    <partial name="_govuk_Header" />
    <partial name="_govuk_PhaseBanner" />

    <div class="govuk-width-container">
        @RenderSection("backbutton", false)
        <main class="govuk-main-wrapper" id="main-content" role="main">
            @RenderBody()
        </main>
    </div>

    <partial name="_govuk_Footer" />
    <partial name="_govuk_Scripts" />

    @RenderSection("jsfiles", false)

</body>
</html>