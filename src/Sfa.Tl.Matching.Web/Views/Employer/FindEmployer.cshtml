@model Sfa.Tl.Matching.Models.ViewModel.FindEmployerViewModel

<a asp-route="Placements_Get" asp-route-id="@Model.OpportunityId" class="govuk-back-link">Back</a>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                <h2 class="govuk-error-summary__title" id="error-summary-title">
                    This page has errors
                </h2>
                <div class="govuk-error-summary__body">
                    <ul class="govuk-list govuk-error-summary__list">
                        <li><a sfa-validation-for="BusinessName"></a></li>
                    </ul>
                </div>
            </div>
        }
        <form asp-action="FindEmployer">
            <input asp-for="OpportunityId" type="hidden" />

            <div class="govuk-form-group" sfa-validation-for="BusinessName" sfa-validationerror-class="govuk-form-group--error">
                <h1 class="govuk-heading-l">Who is the employer?</h1>
                <span id="employer-name-hint" class="govuk-hint">
                    Start typing their business name
                </span>
                <select id="BusinessName" name="BusinessName" class="govuk-input govuk-input" asp-for="BusinessName"></select>
                <input asp-for="SelectedEmployerId" type="hidden" />
                <input id="employerNamesWithIds" type="hidden" />
            </div>

            <button type="submit" class="govuk-button">Continue</button>
        </form>
    </div>
</div>
@section jsfiles{
    <script src="~/javascripts/employer-search.min.js"></script>
}
