@model Sfa.Tl.Matching.Models.ViewModel.EmployerDetailsViewModel



<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
            <h2 class="govuk-error-summary__title" id="error-summary-title">
                This page has errors
            </h2>
            <div class="govuk-error-summary__body">
                <ul class="govuk-list govuk-error-summary__list">
                    <li>
                        <a href="#name-error">You must enter a name</a>
                    </li>
                </ul>
            </div>
        </div>


        <h1 class="govuk-heading-l">Check employer’s details</h1>
        <form>
            <h2 class="govuk-heading-m">West Ham United Football Club Limited</h2>
            <p class="govuk-body"><a href="/Employer">Find a different employer</a></p>
            <div class="govuk-form-group govuk-form-group--error">
                <label class="govuk-label" for="name">
                    Contact name for placements
                </label>
                <span id="name-error" class="govuk-error-message">
                    You must enter a name
                </span>
                <input class="govuk-input govuk-input--error govuk-input--width-20" id="name" name="employer contact name" type="text">
            </div>
            <div class="govuk-form-group">
                <label class="govuk-label" for="email">
                    Email
                </label>
                <input class="govuk-input govuk-input--width-20" id="email" name="employer email" type="text">
            </div>
            <div class="govuk-form-group">
                <label class="govuk-label" for="phone-number">
                    Phone number
                </label>
                <input class="govuk-input govuk-input--width-20" id="phone-number" name="telephone-number" type="tel" autocomplete="tel">
            </div>
            <button type="submit" class="govuk-button">Confirm and continue</button>
        </form>
    </div>
</div>












