@model Sfa.Tl.Matching.Models.ViewModel.EmployerDetailsViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                <h2 class="govuk-error-summary__title" id="error-summary-title">
                    This page has errors
                </h2>
                <div class="govuk-error-summary__body">
                    <ul class="govuk-list govuk-error-summary__list">
                        <li><a sfa-validation-for="ContactName"></a></li>
                    </ul>
                </div>
            </div>
        }
        <h1 class="govuk-heading-l">Check employer’s details</h1>
        <form asp-action="Details">
            <h2 class="govuk-heading-m">West Ham United Football Club Limited</h2>
            <p class="govuk-body">
                <a asp-action="Name" asp-controller="Employer">Find a different employer</a>
            </p>
            <div class="govuk-form-group" sfa-validation-for="ContactName" sfa-validationerror-class="govuk-form-group--error">
                <label class="govuk-label" asp-for="ContactName">
                    Contact name for placements
                </label>
                <span class="govuk-error-message" asp-validation-for="ContactName"></span>
                <input asp-for="ContactName" class="govuk-input govuk-input govuk-input--width-20" />
            </div>
            <div class="govuk-form-group">
                <label class="govuk-label" asp-for="Email">
                    Email
                </label>
                <input asp-for="Email" class="govuk-input govuk-input--width-20" />
            </div>
            <div class="govuk-form-group">
                <label class="govuk-label" asp-for="PhoneNumber">
                    Phone number
                </label>
                <input asp-for="PhoneNumber" class="govuk-input govuk-input--width-20" type="tel" autocomplete="tel" />
            </div>
            <button type="submit" class="govuk-button">Confirm and continue</button>
        </form>
    </div>
</div>












