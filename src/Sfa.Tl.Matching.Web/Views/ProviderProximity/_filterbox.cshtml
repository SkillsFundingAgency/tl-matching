@model Sfa.Tl.Matching.Models.ViewModel.ProviderProximitySearchParametersViewModel

<form id="tl-provider-filter-form" class="form" asp-action="FilterResultsAsync" novalidate>
    <div class="tl-pane">
        <h2 class="govuk-heading-s govuk-!-margin-bottom-3">
            Filter results by skill area
        </h2>
        <div class="govuk-form-group govuk-!-margin-bottom-4" style="background-color: white; padding: 10px">
            <div class="govuk-checkboxes govuk-checkboxes--small">
                @for (var i = 0; i < Model.FiltersArray.Length; i++)
                {
                    <div class="govuk-checkboxes__item">
                        <input type="checkbox" class="govuk-checkboxes__input" asp-for="@Model.FiltersArray[i].IsSelected" name="@Model.FiltersArray[i].IsSelected">
                        <label class="govuk-body-s govuk-checkboxes__label">
                            @Model.FiltersArray[i].Name
                        </label>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="govuk-button tl-button--blue" id="tl-filter">Filter results</button>
        @if (Model.HasFilters)
        {
            <p class="govuk-body govuk-!-margin-bottom-2">
                <a asp-controller="ProviderProximity"
                   asp-action="GetProviderProximityResults"
                   asp-route-searchCriteria="@Model.Postcode"
                   class="govuk-link">
                    Remove filters
                </a>
            </p>
        }
    </div>
</form>