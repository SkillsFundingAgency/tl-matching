@model Sfa.Tl.Matching.Models.ViewModel.AddProviderVenueViewModel

@{
    ViewData["Title"] = "Add venue";
}

@section backButton{
    <a asp-route="GetProviderDetail" asp-route-providerId="@Model.ProviderId" class="govuk-back-link" id="tl-back">Back</a>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
            There is a problem
        </h2>
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                <li><a sfa-validation-for="Postcode"></a></li>
            </ul>
        </div>
    </div>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-route="AddVenue" novalidate>
            <input asp-for="ProviderId" type="hidden" />
            <input asp-for="Source" value="Admin" type="hidden" />
            <div class="govuk-form-group" sfa-validation-for="Postcode" sfa-validationerror-class="govuk-form-group--error">
                <label class="govuk-label" asp-for="Postcode">
                    <h1>Enter the venue’s postcode</h1>
                </label>
                <span class="govuk-error-message" asp-validation-for="Postcode"></span>
                <input asp-for="Postcode" class="govuk-input govuk-input--width-5"
                       sfa-validation-for="Postcode" sfa-validationerror-class="govuk-input--error"
                       type="text">
            </div>

            <button type="submit" class="govuk-button">
                Continue
            </button>
        </form>
    </div>
</div>