@{
    ViewData["Title"] = "T Levels Industry Placement Matching Service";
}

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Find an industry placement</h1>

            <p class="govuk-body">Use this service to help employers:</p>

            <ul class="govuk-list govuk-list--bullet">
                <li>find local providers with suitable students</li>
                <li>talk to providers about placements</li>
                <li>tell us if there are not enough providers for them</li>
            </ul>
        </div>
    </div>

    <div class="govuk-grid-row">
        <form asp-controller="Home" asp-action="Start">
            <div class="form-group">
                <input class="govuk-button" type="submit" value="Start Now">
            </div>
        </form>
    </div>
</main>
