@model Sfa.Tl.Matching.Models.ViewModel.AddQualificationViewModel

@{
    ViewData["Title"] = "Add qualification";
}

@section backButton{
    <a asp-route="GetProviderVenueDetail" asp-route-providerId="@Model.ProviderVenueId" class="govuk-back-link">Back</a>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
            This page has errors
        </h2>
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                <li><a sfa-validation-for="LarId"></a></li>
            </ul>
        </div>
    </div>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-route="AddQualification" novalidate>
            <input asp-for="ProviderVenueId" type="hidden" />
            <input asp-for="Postcode" type="hidden" />
            <input asp-for="Source" value="Admin" type="hidden" />
            <h1 class="govuk-heading-l">Add a qualification for @Model.Postcode</h1>

            <div class="govuk-form-group" sfa-validation-for="LarId" sfa-validationerror-class="govuk-form-group--error">
                <label class="govuk-label" asp-for="LarId">
                    Enter the learning aim reference (LAR)
                </label>
                <span class="govuk-error-message" asp-validation-for="LarId"></span>
                <input asp-for="LarId" class="govuk-input"
                       sfa-validation-for="LarId" sfa-validationerror-class="govuk-input--error"
                       type="text">
            </div>

            <button type="submit" class="govuk-button">
                Continue
            </button>
        </form>
    </div>
</div>