@model Sfa.Tl.Matching.Models.ViewModel.QualificationSearchViewModel

@if (!ViewData.ModelState.IsValid)
{
    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
            This page has errors
        </h2>
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                <li><a sfa-validation-for="Title"></a></li>
            </ul>
        </div>
    </div>
}

<form class="form" asp-route="SearchQualifications">
    <div class="govuk-form-group">
        <div class="tl-search-header">
            <div class="tl-searchfield">
                <div class="tl-search-input">
                    <label class="govuk-heading-s">
                        Enter qualification title or short title
                    </label>
                    <span class="govuk-error-message"></span>
                    <input class="govuk-input tl-search-input" type="text" asp-for="Title"
                           sfa-validation-for="Title" sfa-validationerror-class="govuk-input--error" />
                </div>
                <div class="tl-search-submit"><button class="button" type="submit">Search</button></div>
            </div>
        </div>
    </div>
</form>