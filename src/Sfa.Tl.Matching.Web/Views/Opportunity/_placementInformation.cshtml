@model Sfa.Tl.Matching.Models.ViewModel.CheckAnswersPlacementViewModel

<table class="govuk-table">
    <caption class="govuk-table__caption govuk-heading-m">Placement information</caption>
    <tbody class="govuk-table__body">
        <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="row">Type of placement</th>
            <td class="govuk-table__cell">
                @Model.RouteName
            </td>
            <td class="govuk-table__cell">
                <a asp-route="ProviderResults_Get" 
                   asp-route-opportunityId="@Model.OpportunityId" 
                   asp-route-postcode="@Model.Postcode" 
                   asp-route-selectedRouteId="@Model.RouteId" 
                   class="govuk-link tl-float-right">Change<span class="govuk-visually-hidden"> the type of placement</span></a>
            </td>
        </tr>
        <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="row">Postcode of workplace</th>
            <td class="govuk-table__cell">
                @Model.Postcode
            </td>
            <td class="govuk-table__cell">
                <a asp-route="ProviderResults_Get" 
                   asp-route-opportunityId="@Model.OpportunityId" 
                   asp-route-postcode="@Model.Postcode" 
                   asp-route-selectedRouteId="@Model.RouteId" 
                   class="govuk-link tl-float-right">Change<span class="govuk-visually-hidden"> the postcode of the workplace</span></a>
            </td>
        </tr>
        <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="row">Job role</th>
            <td class="govuk-table__cell">
                @Model.JobTitle
            </td>
            <td class="govuk-table__cell">
                <a asp-route="PlacementInformationSave_Get" asp-route-id="@Model.OpportunityId" class="govuk-link tl-float-right">Change<span class="govuk-visually-hidden"> the job role</span></a>
            </td>
        </tr>
        <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="row">Number of placements</th>
            <td class="govuk-table__cell">
                @if (Model.PlacementsKnown.HasValue && Model.PlacementsKnown.Value)
                {
                    @Model.Placements
                }
                else
                {
                    @:at least 1
                }
            </td>
            <td class="govuk-table__cell">
                <a asp-route="PlacementInformationSave_Get" asp-route-id="@Model.OpportunityId" class="govuk-link tl-float-right">Change<span class="govuk-visually-hidden"> the number of placements</span></a>
            </td>
        </tr>
    </tbody>
</table>