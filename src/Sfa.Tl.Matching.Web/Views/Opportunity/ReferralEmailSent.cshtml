@model Sfa.Tl.Matching.Models.ViewModel.EmailsSentViewModel
@{
    ViewData["Title"] = "Emails sent";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation govuk-!-margin-bottom-8">
            <h1 class="govuk-panel__title">@ViewData["Title"]</h1>
        </div>

        <p class="govuk-body">We have also sent a confirmation email to the employer.</p>
        <div class="govuk-inset-text">
            Remember to <a href="@Model.EmployerCrmRecord" target="_blank" class="govuk-link" id="tl-crm-link">update the employer’s CRM record (opens in a new window or tab)</a> with any new information.
        </div>

        <h2 class="govuk-heading-m">What happens next</h2>

        <p class="govuk-body">We expect the provider will contact @Model.EmployerContact within 2 to 3 working days. The provider will work with @Model.EmployerName to arrange the terms and details of each placement.</p>

        <p class="govuk-body"><a asp-controller="Proximity" asp-action="Start" class="govuk-button govuk-!-margin-bottom-0" id="tl-finish">Finish</a></p>
        <p class="govuk-body js-visible"><a class="govuk-link" href="/feedback">Give us feedback</a></p>


        <input asp-for="EmployerCrmRecord" type="hidden" />
        <input asp-for="EmployerContact" type="hidden" />
        <input asp-for="RouteId" type="hidden" />
        <input asp-for="SearchRadius" type="hidden" />
        <input asp-for="Postcode" type="hidden" />
        <input asp-for="UserEmail" type="hidden" />
        <input asp-for="JobTitle" type="hidden" />
        <input asp-for="Placements" type="hidden" />
        <input asp-for="EmployerName" type="hidden" />

    </div>
</div>