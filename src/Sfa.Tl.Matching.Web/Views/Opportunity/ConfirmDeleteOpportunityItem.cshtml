@model Sfa.Tl.Matching.Models.ViewModel.ConfirmDeleteOpportunityItemViewModel
@{
    ViewData["Title"] = "Confirm you want to delete this opportunity";
}

@section backButton{
    <a asp-route="GetOpportunityBasket" asp-route-opportunityId="@Model.OpportunityId" asp-route-opportunityItemId="@Model.OpportunityItemId" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">@Model.CompanyNameWithAka</span>

        <h1 class="govuk-heading-l">@ViewData["Title"]</h1>

        <table class="govuk-table">
            <caption class="govuk-table__caption govuk-heading-m">Placement information</caption>
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header" scope="row">Postcode of workplace</th>
                    <td class="govuk-table__cell">
                        @Model.Postcode
                    </td>
                </tr>
                <tr class="govuk-table__row">
                    <th class="govuk-table__header" scope="row">Job role</th>
                    <td class="govuk-table__cell">
                        @Model.JobRole
                    </td>
                </tr>
                <tr class="govuk-table__row">
                    <th class="govuk-table__header" scope="row">Students wanted</th>
                    <td class="govuk-table__cell">
                        @Model.PlacementsDetail
                    </td>
                </tr>
            </tbody>
        </table>
        <p class="govuk-body">
            @Model.DeleteWarningText
        </p>

        <form asp-action="DeleteOpportunityItem" novalidate>
            <input asp-for="OpportunityId" type="hidden" />
            <input asp-for="OpportunityItemId" type="hidden" />
            <input asp-for="BasketItemCount" type="hidden" />

            <button class="govuk-button" type="submit">
                @Model.SubmitActionText
            </button>

        </form>
        <p class="govuk-body"><a asp-route="GetOpportunityBasket" asp-route-opportunityId="@Model.OpportunityId" asp-route-opportunityItemId="@Model.OpportunityItemId" class="govuk-link">Cancel and go back</a></p>
    </div>
</div>