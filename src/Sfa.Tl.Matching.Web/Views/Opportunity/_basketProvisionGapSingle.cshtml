@model Sfa.Tl.Matching.Models.ViewModel.BasketProvisionGapItemViewModel
<h2 class="govuk-heading-l tl-hidden-desktop">
    With no providers
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
</h2>

<table class="govuk-table tl-table-responsive">
    <thead class="govuk-table__head">
        <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="col">Workplace</th>
            <th class="govuk-table__header" scope="col">Job role</th>
            <th class="govuk-table__header" scope="col">Students wanted</th>
            <th class="govuk-table__header" scope="col">Reason no providers chosen</th>
        </tr>
    </thead>
    <tbody class="govuk-table__body">
        <tr class="govuk-table__row">
            <td class="govuk-table__cell" data-label="Workplace">
                <input type="hidden" asp-for="@Model.OpportunityItemId" name="SelectedOpportunity[0].Id" />
                @Model.Workplace
            </td>
            <td class="govuk-table__cell" data-label="Job role">@Model.JobRole</td>
            <td class="govuk-table__cell" data-label="Students wanted">@Model.StudentsWanted</td>
            <td class="govuk-table__cell" data-label="Reason no providers chosen">@Model.Reason</td>
        </tr>
    </tbody>
</table>

<button class="govuk-button" name="SubmitAction" value="Finish">Finish</button>