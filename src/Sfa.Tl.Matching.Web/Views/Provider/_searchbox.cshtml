@model Sfa.Tl.Matching.Models.ViewModel.SearchParametersViewModel

@{
    ViewData["Title"] = "Select Providers";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
            This page has errors
        </h2>
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                <li><a sfa-validation-for="Postcode"></a></li>
            </ul>
        </div>
    </div>
}

<h1 class="govuk-heading-l">Select providers</h1>

<form class="form" asp-controller="Provider" asp-action="Results">
    <div class="tl-pane tl-pane__inline-form">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-half">

                <div class="govuk-form-group">
                    <label class="govuk-label govuk-!-font-weight-bold" asp-for="SelectedRouteId">
                        Skill area
                    </label>
                    <select class="govuk-select govuk-!-width-full" asp-for="SelectedRouteId" asp-items="Model.RoutesSelectList"></select>

                </div>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <div class="govuk-form-group" sfa-validation-for="Postcode" sfa-validationerror-class="govuk-form-group--error">
                    <label class="govuk-label govuk-!-font-weight-bold" asp-for="Postcode">
                        Employer postcode
                    </label>
                    <input class="govuk-input govuk-input--width-5" asp-for="Postcode" type="text" sfa-validation-for="Postcode" sfa-validationerror-class="govuk-input--error">

                </div>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <div class="govuk-form-group" sfa-validation-for="SearchRadius" sfa-validationerror-class="govuk-form-group--error">
                    <label class="govuk-label govuk-!-font-weight-bold" asp-for="SearchRadius">
                        Providers within
                    </label>
                    <select class="govuk-select govuk-!-width-two-thirds" asp-for="SearchRadius">
                        <option value="5">5 miles</option>
                        <option value="10">10 miles</option>
                        <option value="15">15 miles</option>
                        <option value="20">20 miles</option>
                        <option value="25">25 miles</option>
                    </select>
                </div>
            </div>
        </div>
        <button type="submit" class="govuk-button tl-button--blue" name="resultsAction" value="searchAgain">Search again</button>

    </div>
</form>