@model Sfa.Tl.Matching.Models.ViewModel.ProviderSearchParametersViewModel

@if (!ViewData.ModelState.IsValid)
{
    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
            This page has errors
        </h2>
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                <li><a sfa-validation-for="UkPrn"></a></li>
            </ul>
        </div>
    </div>
}

    <h1 class="govuk-heading-l">@ViewData["Title"]</h1>
    <form class="form" asp-route="SearchProviderByUkPrn" novalidate>
        <div class="govuk-form-group" sfa-validation-for="UkPrn" sfa-validationerror-class="govuk-form-group--error">
            <div class="tl-search-header">
                <div class="tl-searchfield">
                    <div class="tl-search-input">
                        <label asp-for="UkPrn" class="govuk-label">
                            Enter the provider's UKPRN
                        </label>
                        <span id="ukprn-hint" class="govuk-hint">
                            For example, 10001234
                        </span>
                        <span class="govuk-error-message" asp-validation-for="UkPrn"></span>

                        <input class="govuk-input tl-search-input" asp-for="UkPrn" type="text"
                               sfa-validation-for="UkPrn" sfa-validationerror-class="tl-search-input--error"
                               aria-describedby="ukprn-hint">
                    </div>
                    <div class="tl-search-submit"><button class="button" type="submit">Search</button></div>
                </div>
            </div>
        </div>
        @if (Model.ShowAllProvider)
        {
            <p class="govuk-body"><a class="govuk-link" asp-route="SearchProvider">Show all providers</a></p>
        }
    </form>