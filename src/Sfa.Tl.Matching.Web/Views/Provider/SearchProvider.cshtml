@model Sfa.Tl.Matching.Models.ViewModel.ProviderSearchViewModel
@{
    ViewData["Title"] = "Find a provider";
}

@section backButton{
    <a asp-controller="Proximity" asp-action="Start" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_searchbox" model="Model.SearchParameters" />
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        @if (Model.SearchResults?.Results != null && Model.SearchResults.Results.Any())
        {
            <partial name="_searchresults" model="Model" />
        }
        @if (Model.SearchResults?.Results == null)
        {
            <partial name="_addprovider" model="Model" />
        }

        @if (Model.SearchResults?.Results == null)
        {
            <p class="govuk-body">There is no active provider for [UKPRN]. Please try again.</p>
        }

    </div>
</div>