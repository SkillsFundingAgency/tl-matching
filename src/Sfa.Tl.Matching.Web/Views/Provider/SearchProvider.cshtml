@model Sfa.Tl.Matching.Models.ViewModel.ProviderSearchViewModel
@{
    ViewData["Title"] = "Search for a provider";
}

@section backButton{
    <a asp-controller="Proximity" asp-action="Start" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_searchbox" model="Model.SearchParameters" />
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1>Search for the provider’s UKPRN</h1>
        @if (Model.SearchResults?.Results != null && Model.SearchResults.Results.Any())
        {
            <partial name="_searchresults" model="Model" />
        }
    </div>
</div>