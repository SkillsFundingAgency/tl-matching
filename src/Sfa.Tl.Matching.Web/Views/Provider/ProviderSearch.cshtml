
@{
    ViewData["Title"] = "ProviderSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section backButton{
    <a asp-controller="Proximity" asp-action="Start" class="govuk-back-link">Back</a>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1>Search for the provider’s UKPRN</h1>
        <p class="govuk-body">You can only add or change details for providers that have a UK Provider Reference Number (UKPRN)</p>

        <div class="govuk-form-group">
            <label class="govuk-label" for="ukprn">
                Enter the UKPRN
            </label>
            <span id="ukprn-hint" class="govuk-hint">
                For example, 10001234
            </span>
            <input class="govuk-input govuk-input--width-10" id="ukprn" name="ukprn" type="text" aria-describedby="ukprn-hint">

        </div>
        <button type="submit" class="govuk-button">
            Search
        </button>
    </div>
</div>

